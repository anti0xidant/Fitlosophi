@using System.Diagnostics.Eventing.Reader
@model FITlosophiMVC.Models.BlogViewModel

@{
    ViewBag.Title = "Blog";
}

<div class="widewrapper main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 blog-main">
                <div class="row">
                    @if (Model.Posts.Count > 0)
                    {
                        foreach (var post in Model.Posts)
                        {
                            <div class="col-md-6 col-sm-6">
                                <article class=" blog-teaser">
                                    <header>
                                        <img src=@post.CoverImgURL>
                                        <h3><a href="Home/BlogDetail?PostID=@post.PostID">@post.Title</a>
                                        </h3>
                                        <span class="meta">@post.DatePublished, @post.WriterName</span>
                                        <hr>
                                    </header>

                                    <div class="body">
                                        <div class="blogSummary">
                                            @Html.Raw(post.Body)
                                        </div>
                                        <hr/>
                                        <div class="HashTags">
                                            @if (post.HashTags.Count > 0)
                                            {
                                                foreach (var tag in post.HashTags)
                                                {
                                                    <a href="/Home/BlogByTagID?TagID=@tag.TagID">#@tag.ActualHashTag</a>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="clearfix">
                                        <a href="/Home/BlogDetail?PostID=@post.PostID" class="btn btn-tales-one">Read more</a>
                                    </div>
                                </article>
                            </div>
                        }

                        <div class="paging">
                            <a href="#" class="newer"><i class="fa fa-long-arrow-left"></i> Newer</a>
                            <span>&bull;</span>
                            <a href="#" class="older">Older <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    }
                    @if (Model.Posts.Count == 0)
                    {
                        <p>No Posts Available</p>
                    }
                </div>
                </div>
            <aside class="col-md-4 blog-aside">
                <div class="aside-widget">
                    <header>
                        <h3>Categories</h3>
                    </header>
                    <div class="body clearfix">
                        <ul class="tags">
                            @if (Model.Categories.Count > 0)
                            {
                                foreach (var cat in Model.Categories)
                                {
                                    <li><a href="/Home/BlogByCategoryID?CategoryID=@cat.CategoryID">@cat.CategoryName</a></li>
                                }

                            }
                        </ul>
                    </div>
                </div>
                @if (Model.Posts.Count > 4)
                {
                    <div class="aside-widget">
                        <header>
                            <h3>Read More...</h3>
                        </header>
                        <div class="body">
                            <ul class="tales-list">
                                @for (int i = 4; i < @Model.Posts.Count; i++)
                                {
                                    if (i < 10)
                                    {
                                        <li><a href="/Home/BlogDetail?PostID=@Model.Posts[i].PostID">@Model.Posts[i].Title</a></li>
                                    }
                                }
                           </ul>
                        </div>
                    </div>
                }
            </aside>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/Dot/jquery.dotdotdot.js"></script>
    <script src="~/Scripts/app/blogIndex.js"></script>
}