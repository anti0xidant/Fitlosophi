@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Image Uploader Prototype</h1>
    <p class="lead">Using Cloudinary.</p>
    <p><a href="http://cloudinary.com/blog/direct_upload_made_easy_from_browser_or_mobile_app_to_the_cloud" class="btn btn-primary btn-lg">Learn more &raquo;</a>
    </p>
</div>
<div>

    <input name="file" type="file"
           class="cloudinary-fileupload" data-cloudinary-field="image_id"
           data-form-data="
           { 
            "timestamp":  1345719094, 
             "callback": "https://www.example.com/cloudinary_cors.html",
             "signature": "7ac8c757e940d95f95495aa0f1cba89ef1a8aa7a", 
             "api_key": "1234567890"
           }
           "></input>





</div>


<script src='~/Scripts/jquery.ui.widget.js' type='text/javascript'></script>
<script src='~/Scripts/jquery.iframe-transport.js' type='text/javascript'></script>
<script src='~/Scripts/jquery.fileupload.js' type='text/javascript'></script>
<script src='~/Scripts/jquery.cloudinary.js' type='text/javascript'></script>

<script>
    $(document).ready(function () {

        $.cloudinary.config({ cloud_name: 'dk0wmifkq', api_key: '712155957643256' });

        $('.upload_form').append($.cloudinary.unsigned_upload_tag("zcudy0uz",
        { cloud_name: 'dk0wmifkq' }));

        $('.upload_field').unsigned_cloudinary_upload("zcudy0uz",
  { cloud_name: 'dk0wmifkq', tags: 'browser_uploads' },
  { multiple: true }
).bind('cloudinarydone', function (e, data) {

    $('.thumbnails').append($.cloudinary.image(data.result.public_id,
      {
          format: 'jpg', width: 150, height: 100,
          crop: 'thumb', gravity: 'face', effect: 'saturation:50'
      }))
}

).bind('cloudinaryprogress', function (e, data) {

    $('.progress_bar').css('width',
      Math.round((data.loaded * 100.0) / data.total) + '%');

});
    });

</script>